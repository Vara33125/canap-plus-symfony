{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}
{% block descriptioon %}Réinitialisation du mot de passe{% endblock %}
{% block keywords %}Réinitialisation,  mot de passe{% endblock %}
{% block style %}
    <link rel="stylesheet" href="/styles/resetpassword.css">
{% endblock %}
{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-center my-5">Réinitialisation de votre mot de passe</h1>

    {{ form_start(requestForm) }}
    <div class="d-flex flex-column w-50 mx-auto my-5">
        <label for="">Email</label>
        {{ form_widget(requestForm.email,  {'attr':{'class':'form-control', 'autofocus':'autofocus'}}) }}
    </div>
    <div class="text-center">
        <small>
                Veuillez renseigner votre adresse email afin de recevoir votre lien de réinitialisation.
        </small>
    </div>
        <div class="d-flex justify-content-center my-5">
        <button class="btn btn-colorGreen text-center">Recevoir l'email de réinitialisation</button>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
