{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}
{% block description %}Réinitialiser votre mot de passe{% endblock %}
{% block keywords %}Réinitialiser,mot de passe{% endblock %}

{% block style %}
    <link rel="stylesheet" href="/styles/reset.css">k
{% endblock %}

{% block main %}
  <h1 class="text-center my-3 display-5">Réinitialiser votre mot de passe</h1>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_start(resetForm) }}
                <div class="mb-3">
                    <label for="">Nouveau de passe</label>
                    {{ form_widget(resetForm.plainPassword.first,  {'attr':{'class':'form-control', 'autofocus':'autofocus'}}) }}
                </div>
                <div class="mb-3">
                    <label for=""> Confirmation du nouveau de passe</label>
                    {{ form_widget(resetForm.plainPassword.second,  {'attr':{'class':'form-control', 'autofocus':'autofocus'}}) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-colorGreen ">Réinitialiser mon mot de passe</button>
                </div>
                {{ form_end(resetForm) }}
{% endblock %}
