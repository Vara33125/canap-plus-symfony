{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block style %}
    <link rel="stylesheet" href="/styles/login.css">
{% endblock %}
{% block main %}
    <form method="post" >
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <div class="container-fluid h-100 d-flex flex-column justify-content-center">
            <h1 class="my-5 fw-bolder text-center" style="font-size: 1.5rem">Deja CLient?</h1>
            <div class="col-md-4 col-sm-10 my-2 mx-auto">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="col-md-4 my-2 mx-auto">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class=" my-3">
                <div class="col-md-9 my-2 text-center">
                    <a href="{{path('app_forgot_password_request')}}">Mot de passe oublié?</a>
                </div>
                <div class="col-md-9 mb-3 text-center">
                    <label>
                        <input type="checkbox" name="_remember_me" checked> Se souvenir de moi
                    </label>
                </div>
            </div>
            <div class=" d-flex justify-content-center">
                <input formnovalidate class="btn btn-lg btn-colorGreen " type="submit" value="Connexion">
            </div>
        </div>
    </form>
    <div class="text-center my-5"><h3>Nouveau client?</h3></div>
    <div class="mt-4 d-flex justify-content-center">
        <a href="{{path('visitor_app_register')}}" class="btn btn-colorGreen mx-auto">Créer un compte</a>
    </div>
{% endblock %}
