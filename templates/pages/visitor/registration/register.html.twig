{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block style %}
    
<link rel="stylesheet" href="styles/inscription.css">
{% endblock %}
{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{ form_start(form) }}
     <main class="  d-flex align-items-center container-fluid h-100 ">
        <section class="container-fluid d-flex flex-column align-items-center shadow ">
            <div id="logo" class="d-flex align-items-center justify-content-center bg-white bg-opacity-75 ">
                <img src="./images/logo.png" alt="logo">   
            </div>
            <div  >
                <div class="m-2 p-2">
                
                    <div class="d-flex flex-lg-row smview  w-100">
                        <div class="col-md-6 col-lg-6 row-cols-sm-1 pe-md-1 my-1 d-flex flex-column input">
                            <label for="registration_form_prenom" > Prénom  <div class="text-danger"><small><em>{{form_errors(form.prenom)}}</em></small></div></label>
                            {{form_widget(form.prenom, {'attr': { 'autofocus':'autofocus'}})}}
                        </div>
                        <div class="col-md-6 col-lg-6 row-cols-sm-1 my-1 px-md-1 d-flex flex-column input">
                            <label for="registration_form_nom" > Nom<div class="text-danger"><small><em>{{form_errors(form.nom)}}</em></small></div></label>
                            {{ form_widget(form.nom) }}
                        </div>
                    </div>
                    <div class="d-flex flex-lg-row smview  w-100">
                        <div class=" col-md-6 row-cols-sm-1 pe-md-1 d-flex flex-column input">
                            <label for="registration_email"> Email<div class="text-danger"><small><em>{{form_errors(form.email)}}</em></small></div></label>
                            {{ form_widget(form.email) }}
                        </div>
                        
                        <div class="col-md-6 col-lg-6 row-cols-sm-1  ps-md-1  d-flex flex-column input">
                            <label for="registration_form_telephone" > Numéro de téléphone<div class="text-danger"><small><em>{{form_errors(form.telephone)}}</em></small></div></label>
                            {{ form_widget(form.telephone) }}
                        </div>
                    </div>
                    <div class="d-flex flex-lg-row smview  w-100">
                      <div class=" col-lg-4 row-cols-sm-1 pe-md-1 my-1 d-flex flex-column input">
                          <label for="registration_form_adresse" > Adresse<div class="text-danger"><small><em>{{form_errors(form.adresse)}}</em></small></div></label>
                          {{ form_widget(form.adresse) }}
                      </div>
                      <div class=" col-lg-4 row-cols-sm-1 my-1 px-md-1 d-flex flex-column input">
                          <label for="registration_form_ville" > Ville<div class="text-danger"><small><em>{{form_errors(form.ville)}}</em></small></div></label>
                          {{ form_widget(form.ville) }}
                      </div>
                      <div class=" col-lg-4 row-cols-sm-1  ps-md-1 my-1 d-flex flex-column input">
                          <label for="registration_form_cp" > Code Postal<div class="text-danger"><small><em>{{form_errors(form.cp)}}</em></small></div></label>
                          {{ form_widget(form.cp) }}
                      </div>
                  </div>
                    <div class="col-lg-12 row-cols-sm-1  ps-md-1 my-1 d-flex flex-column input">
                        <label for="registration_form_password_first">Mot de passe <div class="text-danger"><small><em>{{form_errors(form.password.first)}}</em></small></div></label>
                        {{form_widget(form.password.first, {'attr': { 'placeholder':'Au moins 12 caractères'}})}}
                        <div>
                        <small><em>Le mot de passe doit contenir au mois une lettre majuscule, minuscule, un chiffre et un caractère spécial.</em></small>
                        </div>
                    </div >
                    <div class="col-lg-12 row-cols-sm-1  ps-md-1 my-1 d-flex flex-column input">
                        <label for="registration_form_password_second">Confirmation du mot de passe</label>
                        {{form_widget(form.password.second)}}
                         <div class="text-danger">{{form_errors(form.password.second)}}</div>
                    </div>
                    
                    <div class="ms-3 mt-4 d-flex align-items-center">
                        {{ form_widget(form.agreeTerms) }}
                        <label class="ms-3" for="politique"> je déclare avoir lu et compris, la <a href="{{path('visitor_registration_politique')}}">Politique de confidentialité</a>  conformément aux articles 13 et 14 du règlement (UE) 2016/679</label>
                    </div>
                    <div class="d-flex justify-content-center ">
                        <input formnovalidate class="btn btn-colorGreen rounded" type="submit" style="height: 40px; color: #eee0cb" value="Créer mon compte"> </input>
                    </div>
               
            </div>
            </div>
        </section>
    </main>
    {{ form_end(form) }}
    

    
{% endblock %}
